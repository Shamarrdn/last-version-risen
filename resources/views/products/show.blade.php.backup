    <script>
        // متغيرات عامة
        let selectedColorId = null;
        let selectedSizeId = null;
        let selectedVariantId = null;
        let currentPrice = {{ $product->min_price_from_inventory ?? 0 }};
        
        // دالة تحديث الصورة الرئيسية
        function updateMainImage(src, thumbnail) {
            document.getElementById('mainImage').src = src;
            document.querySelectorAll('.thumbnail-wrapper').forEach(thumb => {
                thumb.classList.remove('active');
            });
            if (thumbnail) {
                thumbnail.classList.add('active');
            }
        }

        // تحديث السعر المعروض
        function updateDisplayedPrice() {
            const priceElement = document.querySelector('.product-price .amount');
            if (priceElement && currentPrice !== null && currentPrice !== undefined) {
                priceElement.textContent = currentPrice.toFixed(2);
            }
        }

        // فلترة المقاسات حسب اللون المختار
        function filterSizesByColor(colorId) {
            if (!colorId) {
                // إظهار جميع المقاسات إذا لم يتم اختيار لون
                const sizesContainer = document.getElementById('sizesContainer');
                const dynamicContainer = document.getElementById('dynamicSizesContainer');
                if (sizesContainer) sizesContainer.style.display = 'flex';
                if (dynamicContainer) dynamicContainer.style.display = 'none';
                return;
            }

            fetch(`/products/{{ $product->slug }}/sizes-for-color?color_id=${colorId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const container = document.getElementById('dynamicSizesContainer');
                        const originalContainer = document.getElementById('sizesContainer');
                        
                        // إخفاء المقاسات الأصلية
                        if (originalContainer) {
                            originalContainer.style.display = 'none';
                        }
                        
                        // ملء المقاسات الديناميكية
                        if (container) {
                            container.innerHTML = '';
                            data.sizes.forEach(size => {
                            const button = document.createElement('button');
                            button.type = 'button';
                            button.className = 'size-option btn';
                            button.setAttribute('data-size-id', size.id);
                            button.setAttribute('data-price', size.price);
                            button.setAttribute('data-variant-id', size.variant_id);
                            button.onclick = function() { selectSize(this); };
                            
                            button.innerHTML = `
                                <div class="fw-bold">${size.name}</div>
                                <span class="ms-2 badge bg-primary">${size.price.toFixed(2)} ر.س</span>
                                <small class="d-block text-muted">المتوفر: ${size.available_stock}</small>
                            `;
                            
                                container.appendChild(button);
                            });
                            container.style.display = 'flex';
                        }
                    }
                })
                .catch(error => {
                    console.error('Error fetching sizes:', error);
                });
        }

        // فلترة الألوان حسب المقاس المختار
        function filterColorsBySize(sizeId) {
            console.log('Filtering colors for size ID:', sizeId);
            
            if (!sizeId) {
                // إخفاء قسم الألوان
                const availableColorsSection = document.getElementById('availableColorsForSize');
                if (availableColorsSection) {
                    availableColorsSection.style.display = 'none';
                }
                return;
            }

            const url = `/products/{{ $product->slug }}/colors-for-size?size_id=${sizeId}`;
            console.log('Fetching colors from:', url);

            fetch(url)
                .then(response => response.json())
                .then(data => {
                    console.log('Colors API response:', data);
                    if (data.success && data.colors.length > 0) {
                        const container = document.getElementById('colorsForSizeContainer');
                        const availableColorsSection = document.getElementById('availableColorsForSize');
                        
                        console.log('Container found:', !!container);
                        console.log('Available colors section found:', !!availableColorsSection);
                        
                        // ملء جميع الألوان مع حالة التوفر
                        if (container) {
                            container.innerHTML = '';
                        
                            // عرض الألوان المتاحة فقط (مبسط)
                            data.colors.forEach(color => {
                                const colorDiv = document.createElement('div');
                                colorDiv.className = 'col-md-6 mb-2';
                                
                                colorDiv.innerHTML = `
                                    <div class="color-item available" 
                                         data-color="${color.name}" 
                                         data-color-id="${color.id}"
                                         data-price="${color.price}"
                                         data-stock="${color.available_stock}"
                                         onclick="selectColorForSize(this, true)">
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="color-preview" style="background-color: ${color.code || '#007bff'}"></span>
                                            <div>
                                                <div class="color-name fw-bold">${color.name}</div>
                                                <small class="text-muted">متوفر: ${color.available_stock}</small>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-success">${parseFloat(color.price).toFixed(2)} ر.س</span>
                                        </div>
                                    </div>
                                `;
                                
                                container.appendChild(colorDiv);
                            });
                        }
                        
                        if (availableColorsSection) {
                            availableColorsSection.style.display = 'block';
                        }
                    } else {
                        const availableColorsSection = document.getElementById('availableColorsForSize');
                        if (availableColorsSection) {
                            availableColorsSection.style.display = 'none';
                        }
                    }
                })
                .catch(error => {
                    console.error('Error fetching colors:', error);
                    const availableColorsSection = document.getElementById('availableColorsForSize');
                    if (availableColorsSection) {
                        availableColorsSection.style.display = 'none';
                    }
                });
        }

        // تحديث تفاصيل الـ variant
        function updateVariantDetails() {
            if (!selectedColorId && !selectedSizeId) {
                // إعادة تعيين السعر الأصلي
                currentPrice = {{ $product->min_price_from_inventory }};
                selectedVariantId = null;
                updateDisplayedPrice();
                return;
            }

            fetch(`/products/{{ $product->slug }}/variant-details?color_id=${selectedColorId || ''}&size_id=${selectedSizeId || ''}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.variant) {
                        currentPrice = parseFloat(data.variant.price) || currentPrice;
                        selectedVariantId = data.variant.id;
                        updateDisplayedPrice();
                    }
                })
                .catch(error => {
                    console.error('Error fetching variant details:', error);
                });
        }

        // تحديث دالة اختيار اللون
        function selectColor(element) {
            // إزالة التحديد من جميع الألوان
            document.querySelectorAll('.color-item').forEach(item => {
                item.classList.remove('selected');
            });
            
            // تحديد اللون المختار
            element.classList.add('selected');
            selectedColorId = element.getAttribute('data-color-id');
            
            // فلترة المقاسات حسب اللون
            filterSizesByColor(selectedColorId);
            
            // تحديث تفاصيل الـ variant
            updateVariantDetails();
        }

        // تحديث دالة اختيار المقاس
        function selectSize(element, isAvailable) {
            const sizeId = element.getAttribute('data-size-id');
            const sizeName = element.getAttribute('data-size');
            const stock = element.getAttribute('data-stock');
            
            console.log('Size selected:', sizeName, 'Available:', isAvailable, 'Stock:', stock);
            
            // التحقق من التوفر
            if (!isAvailable || stock == '0') {
                showToast(`مقاس ${sizeName} غير متوفر حالياً`, 'warning');
                return;
            }
            
            // إزالة التحديد من جميع المقاسات
            document.querySelectorAll('.size-option').forEach(item => {
                item.classList.remove('selected');
            });
            
            // تحديد المقاس المختار
            element.classList.add('selected');
            selectedSizeId = sizeId;
            selectedVariantId = null; // سيتم تحديده عند اختيار اللون
            
            // تحديث اسم المقاس المختار
            const selectedSizeNameElement = document.getElementById('selectedSizeName');
            if (selectedSizeNameElement) {
                selectedSizeNameElement.textContent = sizeName;
            }
            
            console.log('Selected size ID:', selectedSizeId);
            
            // فلترة الألوان حسب المقاس
            filterColorsBySize(selectedSizeId);
        }

        // دالة اختيار اللون للمقاس المحدد
        function selectColorForSize(element, isAvailable) {
            const colorId = element.getAttribute('data-color-id');
            const colorName = element.getAttribute('data-color');
            const stock = element.getAttribute('data-stock');
            const price = element.getAttribute('data-price');
            
            console.log('Color selected:', colorName, 'Available:', isAvailable, 'Stock:', stock);
            
            // التحقق من التوفر
            if (!isAvailable || stock == '0') {
                showToast(`اللون ${colorName} غير متوفر لهذا المقاس`, 'warning');
                return;
            }
            
            // إزالة التحديد من جميع الألوان في هذا القسم
            document.querySelectorAll('#colorsForSizeContainer .color-item').forEach(item => {
                item.classList.remove('selected');
            });
            
            // تحديد اللون المختار
            element.classList.add('selected');
            selectedColorId = colorId;
            
            // تحديث السعر
            if (price && price > 0) {
                currentPrice = parseFloat(price);
                updateDisplayedPrice();
            } else {
                console.log('No valid price found for selected color');
            }
            
            // إظهار معلومات الكمية المتاحة
            showStockInfo(stock, colorName);
            
            console.log('Selected color ID:', selectedColorId, 'Price:', currentPrice);
        }

        // إظهار معلومات المخزون
        function showStockInfo(stock, colorName) {
            console.log(`الكمية المتاحة لـ ${colorName}: ${stock}`);
            
            // تحديث الحد الأقصى للكمية في input
            const quantityInput = document.getElementById('productQuantity');
            if (quantityInput) {
                quantityInput.max = stock;
                if (parseInt(quantityInput.value) > parseInt(stock)) {
                    quantityInput.value = stock;
                }
            }
            
            // إظهار رسالة معلوماتية عن الكمية المتاحة
            const existingStockMessage = document.getElementById('stockMessage');
            if (existingStockMessage) {
                existingStockMessage.remove();
            }
            
            const stockMessage = document.createElement('div');
            stockMessage.id = 'stockMessage';
            stockMessage.className = 'alert alert-info alert-sm mt-2';
            stockMessage.innerHTML = `
                <i class="fas fa-info-circle me-2"></i>
                الكمية المتاحة: <strong>${stock}</strong> قطعة
            `;
            
            const colorsContainer = document.getElementById('availableColorsForSize');
            if (colorsContainer) {
                colorsContainer.appendChild(stockMessage);
            }
        }

        // تحديث دالة إضافة للكارت
        function addToCart() {
            const quantity = document.getElementById('productQuantity').value;
            const customColor = document.getElementById('customColor')?.value || '';
            const customSize = document.getElementById('customSize')?.value || '';
            
            // التحقق من اختيار المقاس واللون إذا كانا مطلوبين
            if ({{ $product->enable_size_selection ? 'true' : 'false' }} && !selectedSizeId && !customSize) {
                showToast('يرجى اختيار المقاس أولاً', 'warning');
                return;
            }
            
            if ({{ $product->enable_color_selection ? 'true' : 'false' }} && !selectedColorId && !customColor) {
                showToast('يرجى اختيار اللون', 'warning');
                return;
            }
            
            const data = {
                product_id: {{ $product->id }},
                quantity: quantity,
                color_id: selectedColorId,
                size_id: selectedSizeId,
                color: customColor || (selectedColorId ? document.querySelector('.color-item.selected .color-name').textContent : ''),
                size: customSize || (selectedSizeId ? document.querySelector('.size-option.selected').textContent.split(' ')[0] : '')
            };

            fetch('/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // تحديث عدد العناصر في الكارت
                    updateCartCount(data.cart_count);
                    
                    // إظهار رسالة نجاح
                    showToast('تم إضافة المنتج إلى السلة بنجاح', 'success');
                } else {
                    showToast(data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('حدث خطأ أثناء إضافة المنتج إلى السلة', 'error');
            });
        }

        // دالة إظهار رسائل
        function showToast(message, type = 'info') {
            // إنشاء toast element
            const toast = document.createElement('div');
            toast.className = `alert alert-${type === 'warning' ? 'warning' : type === 'error' ? 'danger' : 'success'} toast-message`;
            toast.style.position = 'fixed';
            toast.style.top = '20px';
            toast.style.right = '20px';
            toast.style.zIndex = '9999';
            toast.style.minWidth = '300px';
            toast.innerHTML = `
                <i class="fas fa-${type === 'warning' ? 'exclamation-triangle' : type === 'error' ? 'times-circle' : 'check-circle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" onclick="this.parentElement.remove()"></button>
            `;
            
            document.body.appendChild(toast);
            
            // إزالة تلقائية بعد 3 ثوان
            setTimeout(() => {
                if (toast.parentElement) {
                    toast.remove();
                }
            }, 3000);
        }

        // تحديث عدد العناصر في الكارت
        function updateCartCount(count) {
            const cartCountElement = document.querySelector('.cart-count');
            if (cartCountElement) {
                cartCountElement.textContent = count;
            }
        }
    </script>
</body>
</html>
@endsection

